    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'pals-vm'",
            "env": {
                "RUST_BACKTRACE": "1"
            },
            "cargo": {
                // "env": {
                //     "RUSTFLAGS": "--cfg tokio_unstable"
                // },
                "args": [
                    "build",
                    "--bin=pals-vm",
                    "--package=pals-vm"
                ],
                "filter": {
                    "name": "pals-vm",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'pals-vm'",
            // "env": {
            //     "RUST_LOG": "pals-vm=trace"
            // },
            "cargo": {
                // "env": {
                //     "RUSTFLAGS": "--cfg tokio_unstable"
                // },
                "args": [
                    "test",
                    "--no-run",
                    "--bin=pals-vm",
                    "--package=pals-vm"
                ],
                "filter": {
                    "name": "pals-vm",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}